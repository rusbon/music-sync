generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model session {
  id        Int      @id @default(autoincrement())
  code      String
  browser   String
  is_active Boolean
  createdAt DateTime @default(now())

  playlist playlist[]

  @@index([code])
}

model playlist {
  id         String   @id
  session_id Int
  link       String
  title      String
  length     Int
  author     String
  size       String
  format     String
  createdAt  DateTime @default(now())

  session session @relation(fields: [session_id], references: [id])
}
